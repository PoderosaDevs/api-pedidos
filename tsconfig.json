{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  }
}
